# Application
APP_NAME="İlişki Analiz AI"
APP_VERSION="0.1.0"
DEBUG=True
ENVIRONMENT=development

# Server
HOST=0.0.0.0
PORT=8000

# Database
DATABASE_URL=sqlite:///./iliski_analiz.db
# PostgreSQL için: postgresql://user:password@localhost:5432/iliski_analiz

# Security
# CRITICAL: Change SECRET_KEY in production! Minimum 32 characters required.
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-change-this-in-production-min-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]

# ML Settings
SPACY_MODEL=tr_core_news_lg
MAX_TEXT_LENGTH=50000
MIN_MESSAGE_COUNT=10

# Rate Limiting
RATE_LIMIT_PER_MINUTE=10

# File Upload
MAX_UPLOAD_SIZE_MB=10
ALLOWED_EXTENSIONS=[".txt", ".json", ".zip"]

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# AI Settings (Yapay Zeka Entegrasyonu)
AI_ENABLED=true
AI_PROVIDER=openai  # openai, anthropic, gemini, none
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini
ANTHROPIC_API_KEY=your-anthropic-api-key-here
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_MODEL=gemini-pro
AI_MAX_TOKENS_INSIGHTS=1000
AI_MAX_TOKENS_RECOMMENDATIONS=800

# Email Settings (SMTP Configuration)
EMAIL_ENABLED=false  # Set to true to enable email sending
# For Gmail: Use App Password (https://support.google.com/accounts/answer/185833)
# For custom SMTP: Use your provider's settings
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password-here
SMTP_FROM_EMAIL=noreply@iliskianaliz.ai
SMTP_FROM_NAME=İlişki Analiz AI
SMTP_USE_TLS=true

# Redis Cache (Optional - for performance)
# If not set, will use in-memory cache (suitable for development)
# For production: REDIS_URL=redis://localhost:6379/0
REDIS_URL=

# Stripe Settings (Payment Integration)
STRIPE_API_KEY=your-stripe-api-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret
FRONTEND_URL=http://localhost:3000
