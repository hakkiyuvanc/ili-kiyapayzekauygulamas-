# Application
APP_NAME="İlişki Analiz AI"
APP_VERSION="0.1.0"
DEBUG=True
ENVIRONMENT=development

# Server
HOST=0.0.0.0
PORT=8000

# Database
DATABASE_URL=sqlite:///./iliski_analiz.db
# PostgreSQL için: postgresql://user:password@localhost:5432/iliski_analiz

# Security
SECRET_KEY=your-secret-key-change-this-in-production-min-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]

# ML Settings
SPACY_MODEL=tr_core_news_lg
MAX_TEXT_LENGTH=50000
MIN_MESSAGE_COUNT=10

# Rate Limiting
RATE_LIMIT_PER_MINUTE=10

# File Upload
MAX_UPLOAD_SIZE_MB=10
ALLOWED_EXTENSIONS=[".txt", ".json", ".zip"]

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# AI Settings (Yapay Zeka Entegrasyonu)
AI_ENABLED=true
AI_PROVIDER=openai  # openai, anthropic, none
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini
ANTHROPIC_API_KEY=your-anthropic-api-key-here
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022
AI_MAX_TOKENS_INSIGHTS=1000
AI_MAX_TOKENS_RECOMMENDATIONS=800
