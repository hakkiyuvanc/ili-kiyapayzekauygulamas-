# Application
APP_NAME="İlişki Analiz AI"
APP_VERSION="0.1.0"
DEBUG=True
ENVIRONMENT=development

# Server
HOST=0.0.0.0
PORT=8000

# Database - PostgreSQL (Supabase)
# DATABASE_URL=postgresql://user:password@host:port/database
# Using local SQLite for development (default in config.py)

# Security - IMPORTANT: Change this in production!
SECRET_KEY=your-secret-key-min-32-characters-required
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS - Update with your production domains
# For Electron app, file:// protocol is included by default
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000", "file://"]

# ML Settings
SPACY_MODEL=tr_core_news_lg
MAX_TEXT_LENGTH=50000
MIN_MESSAGE_COUNT=10

# Rate Limiting
RATE_LIMIT_PER_MINUTE=10

# File Upload
MAX_UPLOAD_SIZE_MB=10
ALLOWED_EXTENSIONS=[".txt", ".json", ".zip"]

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# AI Settings (Yapay Zeka Entegrasyonu)
AI_ENABLED=true
AI_PROVIDER=none
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini
ANTHROPIC_API_KEY=
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022
GEMINI_API_KEY=
GEMINI_MODEL=gemini-pro
AI_MAX_TOKENS_INSIGHTS=1000
AI_MAX_TOKENS_RECOMMENDATIONS=800

# Email Settings (SMTP Configuration)
EMAIL_ENABLED=false
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@iliskianaliz.ai
SMTP_FROM_NAME=İlişki Analiz AI
SMTP_USE_TLS=true

# Redis Cache (Optional)
REDIS_URL=

# Stripe Settings (Payment Integration)
STRIPE_API_KEY=
STRIPE_WEBHOOK_SECRET=
FRONTEND_URL=http://localhost:3000

# Sentry Monitoring
SENTRY_DSN=
