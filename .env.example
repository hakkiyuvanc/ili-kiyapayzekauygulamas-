# ============================================================================
# APPLICATION CONFIGURATION
# ============================================================================

# Application
APP_NAME="İlişki Analiz AI"
APP_VERSION="0.1.0"
DEBUG=True
ENVIRONMENT=development  # development, staging, production

# Server
HOST=0.0.0.0
PORT=8000

# ============================================================================
# DATABASE
# ============================================================================

DATABASE_URL=sqlite:///./iliski_analiz.db
# PostgreSQL için: postgresql://user:password@localhost:5432/iliski_analiz
# ⚠️  Production'da SQLite kullanmayın! PostgreSQL kullanın.

# ============================================================================
# SECURITY & AUTHENTICATION
# ============================================================================

# CRITICAL: Change SECRET_KEY in production! Minimum 32 characters required.
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-change-this-in-production-min-32-chars
ALGORITHM=HS256

# Token Expiration
ACCESS_TOKEN_EXPIRE_MINUTES=30  # Short-lived access tokens
REFRESH_TOKEN_EXPIRE_DAYS=7     # Long-lived refresh tokens for token renewal

# CORS (Cross-Origin Resource Sharing)
# ⚠️  Production'da wildcard (*) kullanmayın! Spesifik origin'ler belirtin.
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]

# ============================================================================
# MACHINE LEARNING
# ============================================================================

SPACY_MODEL=tr_core_news_lg
MAX_TEXT_LENGTH=50000
MIN_MESSAGE_COUNT=10

# ============================================================================
# RATE LIMITING & FILE UPLOAD
# ============================================================================

RATE_LIMIT_PER_MINUTE=10
MAX_UPLOAD_SIZE_MB=10
ALLOWED_EXTENSIONS=[".txt", ".json", ".zip"]

# ============================================================================
# LOGGING & OBSERVABILITY
# ============================================================================

# Logging Configuration
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE=logs/app.log
LOG_JSON_FORMAT=false  # Set to true for structured JSON logging in production

# Sentry Error Tracking
# Get your DSN from: https://sentry.io/settings/projects/
SENTRY_DSN=  # Required in production!
SENTRY_ENVIRONMENT=development  # development, staging, production
SENTRY_TRACES_SAMPLE_RATE=0.1  # 10% of transactions (0.0 to 1.0)

# ============================================================================
# AI INTEGRATION
# ============================================================================

AI_ENABLED=true
AI_PROVIDER=openai  # openai, anthropic, gemini, none

# OpenAI Configuration
# Get API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini

# Anthropic Configuration
# Get API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your-anthropic-api-key-here
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# Gemini Configuration
# Get API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_MODEL=gemini-pro

# AI Token Limits
AI_MAX_TOKENS_INSIGHTS=1000
AI_MAX_TOKENS_RECOMMENDATIONS=800

# ============================================================================
# EMAIL CONFIGURATION
# ============================================================================

EMAIL_ENABLED=false  # Set to true to enable email sending

# For Gmail: Use App Password (https://support.google.com/accounts/answer/185833)
# For custom SMTP: Use your provider's settings
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password-here
SMTP_FROM_EMAIL=noreply@iliskianaliz.ai
SMTP_FROM_NAME=İlişki Analiz AI
SMTP_USE_TLS=true

# ============================================================================
# CACHING & PERFORMANCE
# ============================================================================

# Redis Cache (Optional - for performance)
# If not set, will use in-memory cache (suitable for development)
# For production: REDIS_URL=redis://localhost:6379/0
REDIS_URL=

# ============================================================================
# PAYMENT INTEGRATION
# ============================================================================

# Stripe Settings
# Get keys from: https://dashboard.stripe.com/apikeys
STRIPE_API_KEY=your-stripe-api-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret
FRONTEND_URL=http://localhost:3000

# ============================================================================
# FRONTEND ENVIRONMENT VARIABLES
# ============================================================================
# These should be set in frontend/.env.local

