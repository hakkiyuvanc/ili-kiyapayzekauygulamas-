# Production Environment Configuration
# CRITICAL: Do NOT commit this file to Git!
# Copy this to .env.production and fill in your values

# Application
APP_NAME="İlişki Analiz AI"
APP_VERSION="1.0.0"
DEBUG=False
ENVIRONMENT=production

# Server
HOST=0.0.0.0
PORT=8000

# Database (PostgreSQL - Production)
# TODO: Replace with your Supabase/Neon/Railway PostgreSQL URL
DATABASE_URL=postgresql://user:password@host:5432/database
# Example: postgresql://postgres.xxxxx:password@aws-0-eu-central-1.pooler.supabase.com:6543/postgres

# Connection Pool (PostgreSQL Production Settings)
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=40
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# Security (CRITICAL - Generate new values!)
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(64))"
SECRET_KEY=REPLACE_WITH_GENERATED_SECRET_KEY_MIN_64_CHARS
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# CORS (Production domains only!)
# TODO: Replace with your actual production domain
CORS_ORIGINS=["https://yourdomain.com", "https://www.yourdomain.com"]

# ML Settings
SPACY_MODEL=tr_core_news_lg
MAX_TEXT_LENGTH=50000
MIN_MESSAGE_COUNT=10

# Rate Limiting (Production - stricter limits)
RATE_LIMIT_PER_MINUTE=30
RATE_LIMIT_PER_HOUR=500
RATE_LIMIT_PER_DAY=5000

# File Upload
MAX_UPLOAD_SIZE_MB=10
ALLOWED_EXTENSIONS=[".txt", ".json", ".zip"]

# Logging (Production)
LOG_LEVEL=INFO
LOG_FILE=logs/production.log

# AI Settings (Production with rate limits)
AI_ENABLED=true
AI_PROVIDER=gemini
# TODO: Set production API keys with appropriate rate limits
OPENAI_API_KEY=your-openai-production-key
OPENAI_MODEL=gpt-4o-mini
ANTHROPIC_API_KEY=your-anthropic-production-key  
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022
GEMINI_API_KEY=your-gemini-production-key
GEMINI_MODEL=gemini-pro
AI_MAX_TOKENS_INSIGHTS=1000
AI_MAX_TOKENS_RECOMMENDATIONS=800

# Email Settings (Production SMTP)
EMAIL_ENABLED=true
# TODO: Configure production email service
# For Gmail: Use App Password (https://support.google.com/accounts/answer/185833)
# For SendGrid/Mailgun: Use their SMTP settings
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-production-email@gmail.com
SMTP_PASSWORD=your-app-password-here
SMTP_FROM_EMAIL=noreply@iliskianaliz.ai
SMTP_FROM_NAME=İlişki Analiz AI
SMTP_USE_TLS=true

# Redis Cache (Production - Recommended)
# Upstash/Redis Cloud URL
# TODO: Get from your Redis provider
REDIS_URL=redis://default:password@host:6379
# Example Upstash: redis://default:xxxxx@us1-legal-termite-12345.upstash.io:6379

# Stripe Settings (Production - Live keys!)
# TODO: Switch from test to live keys
STRIPE_API_KEY=sk_live_your_live_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here
STRIPE_PRICE_ID_PRO=price_xxxxx_pro_monthly
STRIPE_PRICE_ID_PREMIUM=price_xxxxx_premium_monthly

# Frontend URL (Production)
# TODO: Replace with actual domain
FRONTEND_URL=https://yourdomain.com

# Sentry (Error Tracking - Production)
# TODO: Get from sentry.io
SENTRY_DSN=https://xxxxx@sentry.io/xxxxx
SENTRY_ENVIRONMENT=production
SENTRY_TRACES_SAMPLE_RATE=0.1

# Monitoring & Alerts
# TODO: Configure monitoring endpoints
HEALTH_CHECK_URL=https://yourdomain.com/api/system/status
UPTIME_ROBOT_API_KEY=your-uptime-robot-key

# Security Headers
SECURE_HEADERS_ENABLED=true
HSTS_MAX_AGE=31536000
CSP_ENABLED=true

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
# TODO: S3/R2 backup credentials
AWS_ACCESS_KEY_ID=your-aws-key
AWS_SECRET_ACCESS_KEY=your-aws-secret
BACKUP_BUCKET=iliski-analiz-backups
